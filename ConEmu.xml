			<value name="WindowMode" type="dword" data="00000520"/>
			<value name="ShowScrollbar" type="hex" data="01"/>
			<value name="QuakeStyle" type="hex" data="01"/>
			<value name="QuakeAnimation" type="ulong" data="100"/>
			<value name="Min2Tray" type="hex" data="01"/>
			<value name="TryToCenter" type="hex" data="01"/>
			<value name="TabFontHeight" type="long" data="12"/>
			<value name="TabsLocation" type="hex" data="01"/>
			<value name="TabFontFace" type="string" data="Arial Black"/>
			<value name="TabConsole" type="string" data="%mâ¬›m%s"/>
			<value name="TabModifiedSuffix" type="string" data="*"/>
			<value name="TabDblClick" type="ulong" data="3"/>
			<value name="AlphaValue" type="hex" data="dd"/>
			<value name="StatusBar.Show" type="hex" data="00"/>
			<value name="CTS.IntelligentExceptions" type="string" data="far"/>
			<value name="CTS.ResetOnRelease" type="hex" data="01"/>
